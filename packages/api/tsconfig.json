{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "strict": false,
    "strictNullChecks": true,
    "target": "ESNext"
  },
  "include": ["src/**/*"]
}
